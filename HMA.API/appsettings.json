{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": null,
          "indexFormat": "hma-api"
        }
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console",
              "Args": {
                "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console"
              }
            }
          ]
        }
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "Logs\\log-.txt",
                "rollingInterval": "Day",
                "fileSizeLimitBytes": 5120,
                "textFormatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
              }
            }
          ]
        }
      }
    ]
  },
  "OpenApiInfo": {
    "Title": "HMA API",
    "Description": "House Money Accountant API",
    "Contact": {
      "Name": "Illia Khovanskyi",
      "Url": "https://github.com/illja96"
    },
    "License": {
      "Name": "MIT License",
      "Url": "https://github.com/illja96/house-money-accountant-api/blob/master/LICENSE"
    }
  },
  "CorsOptions": {
    "AllowedOrigins": null,
    "AllowedMethods": [
      "HEAD",
      "OPTIONS",
      "GET",
      "POST",
      "PATCH",
      "PUT",
      "DELETE"
    ],
    "AllowedHeaders": [
      "Accept",
      "Accept-Encoding",
      "Accept-Language",
      "Authorization",
      "Connection",
      "Content-Length",
      "Content-Type",
      "Cookie",
      "Host",
      "Origin",
      "Referer",
      "Sec-Fetch-Dest",
      "Sec-Fetch-Mode",
      "Sec-Fetch-Site",
      "User-Agent"
    ]
  },
  "GoogleOptions": {
    "ClientId": null,
    "AuthorizationEndpoint": "https://accounts.google.com/o/oauth2/v2/auth",
    "TokenEndpoint": "https://oauth2.googleapis.com/token",
    "UserInformationEndpoint": "https://openidconnect.googleapis.com/v1/userinfo"
  },
  "MongoDbOptions": {
    "ConnectionString": null,
    "DatabaseName": "HMA"
  }
}
